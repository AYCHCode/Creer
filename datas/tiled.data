{
    "Game": {
        "serverParentClasses": ["TiledGame"],
        "mapWidth": {
            "type": "int",
            "description": "The number of Tiles in the map along the x (horizontal) axis."
        },
        "mapHeight": {
            "type": "int",
            "description": "The number of Tiles in the map along the y (vertical) axis."
        },
        "tiles": {
            "type": {
                "name": "list",
                "valueType": "Tile"
            },
            "description": "All the tiles in the map, stored in Row-major order. Use `x + y * mapWidth` to access the correct index."
        }
    },

    "Tile": {
        "description": "A Tile in the game that makes up the 2D map grid.",
        "attributes": {
            "x": {
                "type": "int",
                "description": "The x (horizontal) position of this Tile."
            },
            "y": {
                "type": "int",
                "description": "The y (vertical) position of this Tile."
            },
            "tileAbove": {
                "type": "Tile",
                "description": "The Tile above this one (x, y-1). Null if out of bounds of the map."
            },
            "tileRight": {
                "type": "Tile",
                "description": "The Tile to the right of this one (x+1, y). Null if out of bounds of the map."
            },
            "tileBelow": {
                "type": "Tile",
                "description": "The Tile below this one (x, y+1). Null if out of bounds of the map."
            },
            "tileLeft": {
                "type": "Tile",
                "description": "The Tile to the left of this one (x-1, y). Null if out of bounds of the map."
            }
        }
    }
}